
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="fuelfinder.mann.Activity.SettingsActivity"
        android:background="#DEDEDE">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#DEDEDE"/>
        <View
            android:id="@+id/topline"
            android:layout_width="fill_parent"
            android:layout_height="6dp"
            android:background="@color/blue"/>



        <Spinner
            android:id="@+id/spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/spinner_title"
            android:layout_marginTop="20dip"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            />




        <!-- Label -->
        <TextView
            android:id="@+id/addtext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Station Options"
            android:padding="8dip"
            android:layout_below="@+id/btn_add"
            android:layout_toRightOf="@+id/btn_add"
            android:layout_toEndOf="@+id/btn_add" />

        <!-- Input Text -->
        <EditText android:id="@+id/input_label"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"/>

        <!-- Input Text -->
        <EditText android:id="@+id/input_mileage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/input_label"
            android:inputType="number"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"/>

        <!-- Add Button -->
        <Button android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Vehicle"
            android:layout_below="@+id/input_mileage"
            android:layout_marginLeft="8dip"
            android:layout_marginTop="8dip"
            android:background="@color/blue"/>

        <!-- Add Button -->
        <Button android:id="@+id/btn_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Vehicle"
            android:background="@color/blue"
            android:layout_above="@+id/addtext"
            android:layout_toRightOf="@+id/pickFourButton"
            android:layout_toEndOf="@+id/pickFourButton" />

        <!-- Select Label -->
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Select Vehicle"
            android:padding="8dip" />




        <Button
            android:background="@color/button_material_light"
            android:id="@+id/pickFourButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/station_grid"
            android:width="120dp"
            android:layout_alignTop="@+id/imageButton1"
            android:layout_alignLeft="@+id/pickTheBestButton"
            android:layout_alignStart="@+id/pickTheBestButton" />

        <ImageButton
            android:id="@+id/imageButton1"
            android:contentDescription="whatisthis"
            android:layout_width="15dp"
            android:layout_toRightOf="@+id/pickFourButton"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/addtext"
            android:background="@mipmap/questmark"
            android:layout_height="15dp" />


        <ImageButton
            android:id="@+id/imageButton2"
            android:contentDescription="whatisthis"
            android:layout_width="15dp"
            android:layout_toRightOf="@+id/pickFourButton"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/pickFourButton"
            android:background="@mipmap/questmark"
            android:layout_height="15dp" />

        <Button
            android:background="@color/wallet_holo_blue_light"
            android:id="@+id/pickTheBestButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/map"
            android:width="120dp"
            android:layout_below="@+id/pickFourButton"
            android:layout_toRightOf="@+id/btn_add"
            android:layout_toEndOf="@+id/btn_add" />



        <requestFocus />

    </RelativeLayout>