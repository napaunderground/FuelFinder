<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".DisplayContact"
    android:background = "@color/white">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="fuelfinder.mann.Activity.SettingsActivity"
        android:background="#ffffff">


        <Spinner
            android:id="@+id/spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/spinner_title"
            android:layout_marginTop="20dip"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            />




        <!-- Label -->
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Add New Vehicle here?"
            android:layout_below="@+id/btn_add"
            android:padding="8dip" />

        <!-- Input Text -->
        <EditText android:id="@+id/input_label"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"/>

        <!-- Add Button -->
        <Button android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Label"
            android:layout_below="@+id/input_label"
            android:layout_marginLeft="8dip"
            android:layout_marginTop="8dip"/>

        <!-- Select Label -->
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Select Label"
            android:padding="8dip" />

        <Button

            android:layout_marginTop="120dip"
            android:background="@color/button_material_dark"
            android:id="@+id/moreInputsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_another"
            android:width="120dp"
            android:layout_below="@+id/btn_add"
            android:layout_centerHorizontal="true" />


        <Button
            android:background="@color/button_material_light"
            android:id="@+id/pickFourButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/station_grid"
            android:width="120dp"
            android:layout_below="@+id/moreInputsButton"
            android:layout_centerHorizontal="true" />


        <Button
            android:background="@color/wallet_holo_blue_light"
            android:id="@+id/pickTheBestButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/map"
            android:width="120dp"
            android:layout_alignLeft="@+id/pickFourButton"
            android:layout_alignStart="@+id/pickFourButton"
            android:layout_below="@+id/pickFourButton" />



        <requestFocus />

    </RelativeLayout>
</ScrollView>