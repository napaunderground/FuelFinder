<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".DisplayContact" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <EditText
            android:id="@+id/editTextCarName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:hint="Give Your Car a Name!" />


        <EditText
            android:id="@+id/editTextYearOfMfr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:layout_below="@+id/editTextCarName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:hint="Enter Year of Manufacturer" />




        <EditText
            android:id="@+id/editTextManufacturer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:ems="10"
            android:inputType="text"
            android:hint="Enter Manufacturer"
            android:layout_below="@+id/editTextYearOfMfr"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


        <EditText
            android:id="@+id/editTextVehModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="22dp"
            android:ems="10"
            android:inputType="text"
            android:hint="Enter Vehicle Model"
            android:layout_below="@+id/editTextManufacturer"
            android:layout_alignLeft="@+id/editTextTransmission"
            android:layout_alignStart="@+id/editTextTransmission" />



        <EditText
            android:id="@+id/editTextFuelMileage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="44dp"
            android:ems="10"
            android:inputType="text"
            android:hint="Enter Fuel Mileage"
            android:layout_below="@+id/editTextTransmission"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/editTextEngineSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:ems="10"
            android:inputType="text"
            android:hint="Enter Engine Size"
            android:layout_below="@+id/editTextVehModel"
            android:layout_alignLeft="@+id/editTextManufacturer"
            android:layout_alignStart="@+id/editTextManufacturer" />

        <EditText
            android:id="@+id/editTextTransmission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="21dp"
            android:ems="10"
            android:inputType="text"
            android:hint="Enter Transmission Type"
            android:layout_below="@+id/editTextEngineSize"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="run"
            android:text="@string/map"
            android:layout_below="@+id/editTextFuelMileage"
            android:layout_toRightOf="@+id/editTextFuelMileage"
            android:layout_toEndOf="@+id/editTextFuelMileage" />


        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="settings"
            android:text="@string/enter_another"
            android:layout_below="@+id/editTextFuelMileage"
            android:layout_alignLeft="@+id/editTextFuelMileage"
            android:layout_alignStart="@+id/editTextFuelMileage" />


         <requestFocus />

    </RelativeLayout>

</ScrollView>
  