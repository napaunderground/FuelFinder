<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fuelfinder.mann" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <!--
 The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="fuelfinder.mann.Activity.StartActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name="fuelfinder.mann.Activity.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="fuelfinder.mann.Activity.MapsActivity"
            android:label="@string/title_activity_maps" >
        </activity>
        <activity
            android:name="fuelfinder.mann.Activity.MileageActivity"
            android:label="@string/title_activity_mileage" >
        </activity>

        <activity
            android:name="fuelfinder.mann.Interface.IHttpCallbackListener"
            android:label="@string/title_activity_ihttp_callback_listener" >
        </activity>
        <activity
            android:name="fuelfinder.mann.Parser.MileageParser"
            android:label="@string/title_activity_mileage_parser" >
        </activity>
        <activity
            android:name="fuelfinder.mann.Service.HttpRequestManager"
            android:label="@string/title_activity_http_request_manager" >
        </activity>
        <activity
            android:name="fuelfinder.mann.Service.MileageDataManager"
            android:label="@string/title_activity_mileage_data_manager" >
        </activity>
        <activity
            android:name="fuelfinder.mann.Service.MileageSearchRequestArgs"
            android:label="@string/title_activity_mileage_search_request_args" >
        </activity>
        <activity
            android:name="fuelfinder.mann.Utility.URLFormatUtility"
            android:label="@string/title_activity_urlformat_utility" >
        </activity>
    </application>

</manifest>
